<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PulsarTestTask.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="using:PulsarTestTask.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
        x:Class="PulsarTestTask.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="PulsarTestTask"
		MinWidth="400" MinHeight="300">

	<Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	
	<DockPanel>
		<views:NavigationMenuView DataContext="{Binding NavigationVM}" DockPanel.Dock="Left"/>
		<views:NavigationTitleView DataContext="{Binding NavigationVM}" DockPanel.Dock="Top"/>
		<Border Background="#aca1d7" CornerRadius="10">
			<ContentControl Content="{Binding NavigationVM.SelectedItem.ViewModel}">
				<ContentControl.DataTemplates>
					<DataTemplate DataType="{x:Type vm:PageShopVM}">
						<views:PageShopView/>
					</DataTemplate>
					<DataTemplate DataType="{x:Type vm:PageShoppingCartVM}">
						<views:PageShoppingCartView/>
					</DataTemplate>
					<DataTemplate DataType="{x:Type vm:PageProfileVM}">
						<views:PageProfileView/>
					</DataTemplate>
				</ContentControl.DataTemplates>
			</ContentControl>
		</Border>
	</DockPanel>
</Window>
